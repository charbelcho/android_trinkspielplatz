<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:background="@color/bluegray_900"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/main_menu"
        app:navigationIcon="@drawable/ic_baseline_dehaze_24"
        app:title="@string/app_name"
        app:titleTextColor="@color/black" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="10dp"
            app:layout_column="0"
            app:layout_gravity="center|top"
            app:layout_row="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/bierButtonWuerfel"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner2"
                        android:contentDescription="@string/description"
                        android:padding="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/biericon"
                        ads:cornerRadius="20dp"
                        tools:ignore="SpeakableTextPresentCheck,ImageContrastCheck" />

                    <Button
                        android:id="@+id/alleWaehlenEntfernenButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:lines="2"
                        android:text="@string/alle_waehlen_entfernen"
                        app:cornerRadius="25sp" />

                    <ImageButton
                        android:id="@+id/settingsButton"
                        android:layout_width="64dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_corner2"
                        ads:srcCompat="@drawable/baseline_build_24" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/einsBisDrei"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewWuerfel1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                    <ImageView
                        android:id="@+id/imageViewWuerfel2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                    <ImageView
                        android:id="@+id/imageViewWuerfel3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vierBisSechs"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewWuerfel4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                    <ImageView
                        android:id="@+id/imageViewWuerfel5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                    <ImageView
                        android:id="@+id/imageViewWuerfel6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/siebenBisNeun"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewWuerfel7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                    <ImageView
                        android:id="@+id/imageViewWuerfel8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                    <ImageView
                        android:id="@+id/imageViewWuerfel9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/zehnBisZwoelf"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewWuerfel10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                    <ImageView
                        android:id="@+id/imageViewWuerfel11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                    <ImageView
                        android:id="@+id/imageViewWuerfel12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        ads:srcCompat="@drawable/wuerfel_1_black" />

                </LinearLayout>

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/wuerfelButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wuerfeln"
                    app:cornerRadius="25sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:adSize="LARGE_BANNER"
            app:adUnitId="ca-app-pub-5545282755961898/8024751131"
            tools:ignore="MissingConstraints"></com.google.android.gms.ads.AdView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>