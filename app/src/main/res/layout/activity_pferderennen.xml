                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    android:text="@string/naechste_karte"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:cornerRadius="20dp"
